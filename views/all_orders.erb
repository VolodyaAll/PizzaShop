<h2>All orders</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Adress</th>
      <th scope="col">Order</th>
    </tr>
  </thead>
  <tbody>  	
  	<% @o.each do |order| %>
	  	<tr>
	      <th scope="row"><%= order.id %></th>
	      <td><%= order.name %></td>
	      <td><%= order.phone %></td>
	      <td><%= order.adress %></td>
        <td><%= order.orders_input %></td>	     
	    </tr>	   
  	<% end %>   	
  </tbody>
</table>